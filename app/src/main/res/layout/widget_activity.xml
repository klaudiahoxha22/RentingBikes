<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/InchiriereBiciclete"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-147dp"
        android:layout_toStartOf="@+id/calorii"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/distantaParcursa"
        android:text="@string/InchiriereBiciclete"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="21sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/distantaParcursa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/distantaParcursa"
        android:text="@string/distantaParcursa"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/distantaParcursa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/distantaParcursa2"
        android:layout_marginEnd="43dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/distantaParcursa"
        android:text="@string/distantaParcursa"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/calorii2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="79dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/calorii"
        android:text="@string/calorii"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/calorii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/calorii2"
        android:layout_marginEnd="80dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/calorii"
        android:text="@string/calorii"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/timp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="124dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/timp"
        android:text="@string/timp"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/timp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calorii"
        android:layout_alignTop="@+id/timp2"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/timp"
        android:text="@string/timp"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


</RelativeLayout>