<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:padding="@dimen/widget_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultimul traseu:"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:layout_margin="15dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/distantaParcursa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calorii"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/distantaParcursa"
        android:padding="5dp"
        android:text="@string/distantaParcursa"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/distantaParcursa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/distantaParcursa2"
        android:layout_marginEnd="43dp"
        android:padding="10dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/distantaParcursa"
        android:text="0.12"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/calorii2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timp2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/calorii"
        android:padding="10dp"
        android:text="@string/calorii"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/calorii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calorii2"
        android:layout_alignBottom="@+id/calorii2"
        android:layout_alignEnd="@+id/distantaParcursa"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/calorii"
        android:padding="10dp"
        android:text="@string/calorii"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/timp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/timp"
        android:padding="10dp"
        android:text="@string/timp"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/timp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calorii"
        android:layout_alignTop="@+id/timp2"
        android:background="@android:color/holo_orange_light"
        android:contentDescription="@string/timp"
        android:text="@string/timp"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:padding="10dp"
        android:textStyle="italic" />


</RelativeLayout>